<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/activity_main"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <!-- Scroll para modo landscape-->
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:gravity="center_horizontal">



        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hapticFeedbackEnabled="false"
            android:id="@+id/left_table"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingBottom="5dp"

                android:gravity="right">

                <ImageButton
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:id="@+id/meus_campos_botao"
                    android:contentDescription="@string/my_fields"
                    android:layout_weight="0"
                    android:layout_column="0"
                    android:layout_span="0"
                    android:clickable="false"
                    android:contextClickable="false"
                    android:cropToPadding="false"
                    android:background="@drawable/celeiro" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|right"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/my_fields"
                    android:id="@+id/meus_campos"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:layout_column="0"
                    android:layout_span="0"
                    android:layout_weight="0" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingBottom="5dp"
                android:gravity="right" >

                <ImageButton
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:id="@+id/registo_entradas_botao"
                    android:background="@drawable/sacos"
                    android:layout_weight="0"
                    android:layout_column="0"
                    android:layout_span="0"
                    android:clickable="false" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|right"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/entries"
                    android:id="@+id/registo_entradas"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:layout_column="0"
                    android:layout_span="0"
                    android:layout_weight="0" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingBottom="5dp"
                android:gravity="right" >

                <ImageButton
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:background="@drawable/joaninha"
                    android:layout_weight="0"
                    android:layout_column="0"
                    android:layout_span="0"
                    android:id="@+id/observacoes_organismos_botao"
                    android:clickable="false" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|right"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/obs_organism"
                    android:id="@+id/observacoes_organismos"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:layout_column="0"
                    android:layout_span="0"
                    android:layout_weight="0" />
            </TableRow>

        </TableLayout>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hapticFeedbackEnabled="false"
            android:id="@+id/right_table"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingBottom="5dp"
                android:gravity="left|center">

                <ImageButton
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:id="@+id/intervencoes_tecnicas_botao"
                    android:background="@drawable/intervencao2"
                    android:layout_weight="0"
                    android:layout_column="0"
                    android:layout_span="0"
                    android:clickable="false" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tec_intervention"
                    android:id="@+id/intervencoes_tecnicas"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:layout_column="0"
                    android:layout_span="0"
                    android:layout_weight="0"
                    android:gravity="center_horizontal" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingBottom="5dp"
                android:gravity="left|center" >

                <ImageButton
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:id="@+id/registo_estados_fenologicos_botao"
                    android:background="@drawable/plantinha"
                    android:layout_weight="0"
                    android:layout_column="0"
                    android:layout_span="0"
                    android:clickable="false" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/register_feno"
                    android:id="@+id/registar_estado_fenologico"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:layout_column="0"
                    android:layout_span="0"
                    android:layout_weight="0"
                    android:gravity="center_horizontal" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingBottom="5dp"
                android:gravity="left|center" >

                <ImageButton
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:id="@+id/estatistitcas_botao"
                    android:background="@drawable/stats2"
                    android:layout_weight="0"
                    android:layout_column="0"
                    android:layout_span="0"
                    android:contextClickable="false"
                    android:clickable="false"
                    android:longClickable="false" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/statistics"
                    android:id="@+id/estatisticas"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:layout_column="0"
                    android:layout_span="0"
                    android:layout_weight="0"
                    android:gravity="center_horizontal" />
            </TableRow>

        </TableLayout>

    </LinearLayout>

</ScrollView>
</RelativeLayout>

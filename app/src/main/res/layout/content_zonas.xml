<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingTop="?attr/actionBarSize"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"

    tools:context="com.example.diogo.fieldnote.ZonasActivity"
    tools:showIn="@layout/activity_zonas"

    android:weightSum="100"
    android:orientation="vertical"
    android:baselineAligned="false">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <TextView
            android:gravity="center"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Zona "
            android:textSize="20dp"
            android:id="@+id/textView"
            android:layout_alignParentStart="true" />

        <TextView
            android:gravity="center"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Área"
            android:textSize="20dp"
            android:id="@+id/textView14"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/textView" />

        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Número Parcelas"
            android:textSize="20dp"
            android:id="@+id/textView15"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView14" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ListView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/zonasView"
         />

        <ListView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/areaView"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/zonasView" />

        <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nparcelasView"
                android:layout_toEndOf="@+id/areaView"
                android:layout_alignTop="@+id/areaView">
        </ListView>
    </RelativeLayout>


</LinearLayout>

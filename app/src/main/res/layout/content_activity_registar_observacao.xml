<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_registar_observacao">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.diogo.fieldnote.RegistarObservacaoActivity"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_registar_observacao">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parcela"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/parcelasdrop"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data de Observação"
        android:id="@+id/textView"
        android:layout_below="@+id/parcelasdrop"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/dataObs"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:hint="dd-mm-aaaa" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pragas"
        android:id="@+id/textView11"
        android:layout_below="@+id/dataObs"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registar Observação"
        android:id="@+id/registarObsButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/observações"
        android:backgroundTint="@android:color/holo_green_dark"
        android:textColor="@android:color/white"
        android:layout_marginTop="15dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/praga1"
        android:layout_below="@+id/textView11"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/dataObs"
        android:hint="Nome da praga" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/praga2"
        android:layout_below="@+id/praga1"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/praga1"
        android:hint="Nome da praga" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/praga3"
        android:layout_below="@+id/praga2"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/praga2"
        android:hint="Nome da praga" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Doenças"
        android:id="@+id/textView4"
        android:layout_below="@+id/praga3"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/doencas1"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/praga3"
        android:hint="Nome da doença" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/doencas2"
        android:layout_below="@+id/doencas1"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/doencas1"
        android:hint="Nome da doença" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/doencas3"
        android:layout_below="@+id/doencas2"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/doencas2"
        android:hint="Nome da doença" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Auxiliares"
        android:id="@+id/textView5"
        android:layout_below="@+id/doencas3"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/auxiliares1"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/auxiliares2"
        android:hint="Nome do auxiliar" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/auxiliares2"
        android:layout_below="@+id/auxiliares1"
        android:layout_alignEnd="@+id/doencas3"
        android:layout_alignParentStart="true"
        android:hint="Nome do auxiliar" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/auxiliares3"
        android:layout_below="@+id/auxiliares2"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/auxiliares2"
        android:hint="Nome do auxiliar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Observações"
        android:id="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/auxiliares3"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/observações"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/auxiliares3"
        android:hint="Observações anotadas" />

</RelativeLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"

    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/activity_main"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"

    android:orientation="horizontal"
    android:baselineAligned="false">

    <ScrollView

        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView3"
        >

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageButton
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/meus_campos_botao"
                android:contentDescription="@string/my_fields"
                android:background="@drawable/celeiro"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                 />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/my_fields"
                android:id="@+id/meus_campos"
                android:textSize="15sp"
                android:textAlignment="center"
                android:layout_below="@+id/meus_campos_botao"
                android:layout_alignEnd="@+id/meus_campos_botao"
                android:layout_alignStart="@+id/meus_campos_botao" />

            <ImageButton
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/registo_entradas_botao"
                android:background="@drawable/sacos"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/meus_campos"
                android:layout_alignEnd="@+id/meus_campos_botao" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/entries"
                android:id="@+id/registo_entradas"
                android:textSize="15sp"
                android:textAlignment="center"

                android:layout_below="@+id/registo_entradas_botao"
                android:layout_alignEnd="@+id/registo_entradas_botao"
                android:layout_alignStart="@+id/registo_entradas_botao" />

            <ImageButton
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/joaninha"
                android:id="@+id/observacoes_organismos_botao"
                android:layout_below="@+id/registo_entradas"
                android:layout_alignStart="@+id/registo_entradas_botao" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/obs_organism"
                android:id="@+id/observacoes_organismos"
                android:textSize="15sp"
                android:textAlignment="center"

                android:layout_below="@+id/observacoes_organismos_botao"
                android:layout_alignStart="@+id/observacoes_organismos_botao"
                android:layout_alignEnd="@+id/observacoes_organismos_botao" />

            <ImageButton
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/intervencoes_tecnicas_botao"
                android:background="@drawable/intervencao2"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/meus_campos_botao"
                android:layout_marginStart="30dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tec_intervention"
                android:id="@+id/intervencoes_tecnicas"
                android:textSize="15sp"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_below="@+id/intervencoes_tecnicas_botao"
                android:layout_alignStart="@+id/intervencoes_tecnicas_botao"
                android:layout_alignEnd="@+id/intervencoes_tecnicas_botao" />

            <ImageButton
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/registo_estados_fenologicos_botao"
                android:background="@drawable/plantinha"
                android:layout_below="@+id/intervencoes_tecnicas"
                android:layout_alignStart="@+id/intervencoes_tecnicas_botao" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/register_feno"
                android:id="@+id/registar_estado_fenologico"
                android:textSize="15sp"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_below="@+id/registo_estados_fenologicos_botao"
                android:layout_alignStart="@+id/registo_estados_fenologicos_botao"
                android:layout_alignEnd="@+id/registo_estados_fenologicos_botao" />

            <ImageButton
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/meteorologia_botao"
                android:background="@drawable/tempo"
                android:layout_below="@+id/registar_estado_fenologico"
                android:layout_alignStart="@+id/registo_estados_fenologicos_botao" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Meteorologia"
                android:id="@+id/Meteorologia"
                android:textSize="15sp"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_below="@+id/meteorologia_botao"
                android:layout_alignStart="@+id/meteorologia_botao"
                android:layout_alignEnd="@+id/meteorologia_botao" />

        </RelativeLayout>
    </ScrollView>


</LinearLayout>
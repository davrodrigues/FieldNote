<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.diogo.fieldnote.MainActivity"
    tools:showIn="@layout/activity_main"
    android:visibility="visible"
    android:gravity="center_horizontal">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:hapticFeedbackEnabled="false"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:measureWithLargestChild="true">
        <!-- primeira linha -->

        <TableRow
            android:layout_width="360dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="10dp">

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageButton1"
                android:background="@drawable/sample_100"
                android:contentDescription="@string/my_fields"
                android:verticalScrollbarPosition="defaultPosition"
                android:textAlignment="center" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton2"
                android:background="@drawable/sample_100"
                android:contentDescription="@string/entries" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_fields"
                android:id="@+id/textView5"
                android:textSize="15sp"
                android:textAlignment="center"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/entries"
                android:id="@+id/textView6"
                android:textSize="15sp"
                android:textAlignment="center" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:paddingBottom="5dp">

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageButton7"
                android:background="@drawable/notebook1"
                android:paddingStart="20dp" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageButton8"
                android:background="@drawable/char_icon_statistics" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/statistics"
                android:id="@+id/textView7"
                android:textSize="15sp"
                android:textAlignment="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/statistics"
                android:id="@+id/textView8"
                android:textSize="15sp"
                android:textAlignment="center"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:paddingBottom="5dp">

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageButton9"
                android:background="@drawable/char_icon_statistics"
                android:paddingRight="20dp" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageButton10"
                android:background="@drawable/char_icon_statistics"
               />
                 </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/tec_intervention"
                android:id="@+id/textView9"
                android:textSize="15sp"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/obs_organism"
                android:id="@+id/textView10"
                android:textSize="15sp"
                android:textAlignment="center"/>
        </TableRow>


    </TableLayout>

</RelativeLayout>

